<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control p-3 mb-3 shadow rounded", placeholder: "Enter A Username" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <!--      you can add rows to indicate how tall you want your field to be-->
            <%= f.email_field :email, class: "form-control p-3 mb-3 shadow rounded", placeholder: "Enter Your Email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <!--      you can add rows to indicate how tall you want your field to be-->
            <%= f.password_field :password, class: "form-control p-3 mb-1 shadow rounded", placeholder: "Enter Your Password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center mt-4">
          <%= f.submit class: "btn btn-outline-light btn-lg col-3" %>
        </div>

      <% end %>
      <div class="mb-3">
        <%= link_to '[ Cancel and Go Back ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>